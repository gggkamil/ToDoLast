@model IEnumerable<ToDoLast.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Tasks List</h1>

<p>
    <form asp-action="Create">
        <button style="background-color:orange">Create New</button>
    </form>
    
</p>
<table class="table" style="color:whitesmoke">
    <thead>
        <tr>
            <th>Tasks List</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobQuestion) 
            </td>
            <td>
                <p>

                </p>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <button style=" color:white;background-color:orange">Edit</button>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <button style="color:white; background-color:orange">Details</button>
                    </a >
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <button style="color:white ;background-color:orange">Delete</button>
                    </a>
                    

            </td>
        </tr>
}
    </tbody>
</table>
